// .babelrc

{
    "presets": [
        ["@babel/preset-react", {"runtime": "automatic"}],
        [
            "@babel/preset-env",
            {
                "targets": {
                    "browsers": "last 2 versions"
                },
                "modules": false,
                "loose": false
            }
        ]
    ],
    "plugins": [
        "transform-class-properties",
        ["@babel/plugin-transform-react-jsx", {
            "runtime": "automatic"
          }]
    ],
    "env": {
        "test": {
            "plugins": [
                "transform-es2015-modules-commonjs"
            ]
        }
    }
}